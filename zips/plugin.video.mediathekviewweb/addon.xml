<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.mediathekviewweb" name="MediathekViewWeb V2" version="2023.11.25" provider-name="itouch5000 - edit by kasi">
    <requires>
        <import addon="script.module.requests" version="2.7.0"/>
        <!-- for remote debug -->
        <import addon="script.module.pydevd" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup" />
    <extension point="xbmc.webinterface"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_GB">A MediathekView client</summary>
        <description lang="en_GB">MediathekViewWeb is a simple browser interface for accessing the movie list of the MediathekView project.</description>
        <summary lang="de_DE">Ein MediathekView Client</summary>
		<description lang="de_DE">MediathekViewWeb ist eine einfache Browser-Oberfläche für den Zugriff auf die Filmliste des MediathekView Projekts.</description>
        <license>GPL 2.0</license>
        <assets>
            <icon>resources/media/icon.png</icon>
            <fanart>resources/media/icon.png</fanart>
            <screenshot>resources/media/screenshots/screenshot-01.jpg</screenshot>
            <!-- <screenshot>resources/media/screenshots/screenshot-02.jpg</screenshot>
            <screenshot>resources/media/screenshots/screenshot-03.jpg</screenshot> -->
        </assets>
    </extension>
</addon>
